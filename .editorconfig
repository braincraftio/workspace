# EditorConfig is awesome: https://EditorConfig.org
# BrainCraft.io Workspace EditorConfig
# This file ensures consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Shell scripts (already inherit trim_trailing_whitespace = false from [*])
[*.{sh,bash}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON and JSONC files
[*.{json,jsonc,json5}]
indent_size = 2

# Markdown files (already inherit trim_trailing_whitespace = false from [*])
[*.{md,markdown}]
max_line_length = 0

# TypeScript/JavaScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML/XML files
[*.{html,xml,svg}]
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Git files
[.git*]
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Binary files that should not have final newline
[*.{pdf,png,jpg,jpeg,gif,ico,webp,woff,woff2,ttf,otf,eot}]
insert_final_newline = false
trim_trailing_whitespace = false

# Binary or generated files
[*.{zip,tar,gz,bz2,7z,rar,exe,dll,so,dylib,bin,dat}]
insert_final_newline = false
trim_trailing_whitespace = false
