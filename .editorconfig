# EditorConfig is awesome: https://EditorConfig.org
# BrainCraft.io Workspace EditorConfig
# This file ensures consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_size = 2
# Shell scripts may have intentional trailing whitespace for line continuations
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_size = 2
insert_final_newline = true

# JSONC files (JSON with comments)
[*.{jsonc,json5}]
indent_size = 2
insert_final_newline = true

# Markdown files
[*.{md,markdown}]
# Markdown may have intentional trailing whitespace for line breaks
trim_trailing_whitespace = false
max_line_length = 0  # Let prettier handle wrapping

# TypeScript/JavaScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = double

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML/XML files
[*.{html,xml,svg}]
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Git files
[.git*]
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Special files that should not have final newline
[*.{pdf,png,jpg,jpeg,gif,ico,svg}]
insert_final_newline = false
